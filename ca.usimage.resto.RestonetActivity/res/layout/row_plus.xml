<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:padding="5dip" >
    >
 

<TextView
	android:id="@+id/Etablissement" 
	 android:layout_width="wrap_content"
	android:layout_height="40dp"
	
android:layout_alignParentTop="true"
    android:textColor="@color/holoBlue"
          android:ems="10"
        android:textSize="16sp" 
 
	/>

<TextView 
	android:id="@+id/count_txt"
	 android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:text=" Nombre d'amendes: "
	android:layout_toRightOf="@+id/Etablissement"
	
	android:textColor="#ffff0000"/>

<TextView 
	android:id="@+id/Count" android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	   android:focusable="false"
    android:focusableInTouchMode="false"
     android:paddingRight="10dp"
      android:layout_toRightOf="@+id/count_txt"
	android:textColor="#ffff0000"/>

  <ImageButton
    android:id="@+id/ImageButton01"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:src="@drawable/location"
    android:layout_below="@+id/Count"
     android:layout_alignParentRight="true"
   
     />
    <TextView
	android:id="@+id/Adresse" android:layout_width="wrap_content" 
	android:layout_height="25dp"
	android:layout_weight="1"
	android:textColor="#000000"
	android:layout_below="@+id/Etablissement"
    android:paddingLeft="10dp"
	/>

    
         <ImageView 
        android:id="@+id/Exploitant" 
        android:layout_width="40dp" 
	    android:layout_height="40dp"
	    android:layout_toLeftOf="@+id/ImageButton01"
	  android:layout_below="@+id/count_txt"
	
	    
        />
 
</RelativeLayout>

