<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    >
 
<TableRow >
<TextView
	android:id="@+id/TextView01" 
	android:layout_height="40dp"
	android:layout_weight="1"
	android:focusable="false"
    android:focusableInTouchMode="false"
    android:textColor="@color/holoBlue"
    android:paddingLeft="10dp"
	/>
<TextView 
	android:id="@+id/count_txt" android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:text=" Nombre d'amendes: "
	   android:focusable="false"
    android:focusableInTouchMode="false"
	android:textColor="#ffff0000"/>
<TextView 
	android:id="@+id/Count" android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	   android:focusable="false"
    android:focusableInTouchMode="false"
     android:paddingRight="10dp"
	android:textColor="#ffff0000"/>
  <ImageButton
    android:id="@+id/ImageButton01"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:src="@drawable/location"
     />
</TableRow>
<TableRow >
    <TextView
	android:id="@+id/Adresse" android:layout_width="wrap_content" 
	android:layout_height="25dp"
	android:layout_weight="1"
	android:textColor="#000000"
    android:paddingLeft="10dp"
	/>
  
  

    </TableRow>
</TableLayout>

